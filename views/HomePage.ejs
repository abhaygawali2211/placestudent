<!-- Bootstrap CDN -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
  body {
    margin: 0;
    padding: 20px;
    background: linear-gradient(to right, #4d5291, #434343);
    font-family: 'Arial', sans-serif;
  }

  h2 {
    text-align: center;
    color: #ffffff;
    margin-bottom: 30px;
  }

  .student-card {
    background: hsl(207, 53%, 53%); /* ✅ Light teal background */
    border-radius: 15px;
    padding: 20px;
    min-height: 220px;
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.25);
    transition: all 0.3s ease-in-out;
    border: 1px solid #b2ebf2;
  }

  .student-card:hover {
    background:#fe86f4;
    transform: scale(1.03);
    box-shadow: 0 10px 18px rgba(0, 0, 0, 0.3);
  }

  .student-card h3 {
    font-size: 1.3rem;
    color: #004d40;
    margin-bottom: 12px;
  }

  .student-card p {
    color: #333;
    margin-bottom: 6px;
    font-size: 0.95rem;
  }
</style>

<body>
  <!-- Navigation bar -->
  <%- include("Navbar") %>

  <!-- Heading -->
  <h2>Student Information</h2>

  <!-- Cards Grid -->
  <div class="container">
    <div class="row g-4">
      <% users.map((user, index) => { %>
        <div class="col-md-3 col-sm-6">
          <div class="student-card">
            <h3><%= user.name %></h3>
            <p><strong>Degree:</strong> <%= user.degree %></p>
            <p><strong>Domain:</strong> <%= user.domain %></p>
            <p><strong>position:</strong> <%= user.position %></p>
             <img src="/uploads/<%= user.image %>" 
     alt="Profile Image" 
     class="img-fluid rounded" 
     style="width: 100%; height: 180px; object-fit: cover;" />

           <p><strong>Company:</strong>
  <a href="<%= user.company_website %>" target="_blank" style="color: #fff; text-decoration: underline;">
    Visit Website
  </a>
</p>

          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
